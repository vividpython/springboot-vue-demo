<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <!-- namespace路径根据自己而定 -->
        <!-- 查询用户列表（带多条件） -->
        <select id="findUserList" resultType="com.example.demo.entity.User">
            select *
            from user
            <where>
                1 = 1
                <if test="userQueryParam != null">
                    <if test="userQueryParam.username != null and userQueryParam.username != ''">
                        and username like CONCAT('%',#{userQueryParam.username}, '%')
                    </if>
                    <if test="userQueryParam.nickname != null and userQueryParam.nickname != ''">
                        and nickname like CONCAT('%',#{userQueryParam.nickname}, '%')
                    </if>
                    <if test="userQueryParam.sex != null and userQueryParam.sex != ''">
                        and sex like CONCAT('%',#{userQueryParam.sex}, '%')
                    </if>
                    <if test="userQueryParam.address != null and userQueryParam.address != ''">
                        and address like CONCAT('%',#{userQueryParam.address}, '%')
                    </if>
                </if>
            </where>
        </select>
</mapper>




